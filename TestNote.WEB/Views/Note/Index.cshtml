@model TestNote.DAL.Models.NoteModel

@{
    ViewData["Title"] = "Note Page";
}
<div class="container">
    <form class="form-inline"
          asp-action="GetList" asp-controller="Note" data-ajax-loading="#spinner"
          data-ajax="true"
          data-ajax-method="GET"
          data-ajax-success="LoadNodeSucces"
          data-ajax-update="#noteTable">

        <div class="input-group mb-3 mr-sm-3">
            <div class="date" id="datetimepicker1" data-target-input="nearest">
                <input type="text" name="startDate" class="form-control datetimepicker-input" data-target="#datetimepicker1" placeholder="FROM" required />
            </div>
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                <div class="input-group-text"> <img src="~/icons/calendar.svg" alt="" title="from"></div>
            </div>
        </div>

        <div class="input-group mb-3 mr-sm-3">
            <div class="date" id="datetimepicker2" data-target-input="nearest">
                <input type="text" name="endDate" class="form-control datetimepicker-input" data-target="#datetimepicker2" placeholder="TO" required />
            </div>
            <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
                <div class="input-group-text"> <img src="~/icons/calendar.svg" alt="" title="to"></div>
            </div>
        </div>

        <button class="btn btn-outline-primary mb-3 mr-sm-3" type="submit">
            <img src="~/icons/search.svg" alt="" title="Search">
        </button>
    </form>
    <hr />

    <div class="row" id="myPartialContainer">

    </div>

    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status" id="spinner" style="display:none;">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="row" id="noteTable">
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />

    <script src="~/js/signalr/signalr.js"></script>
    <script src="~/js/signalr/hubs/noteHub.js"></script>

    <script src="~/js/note.js"></script>
}