@model TestNote.DAL.Models.NoteModel

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form asp-action="Create" asp-controller="Note"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-success="CreateNodeSucces"
                  data-ajax-failure="CreateNodeError"
                  data-ajax-mode="after"
                  data-ajax-update="#noteTable">
                <div class="mb-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="UserName" class="control-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@@</span>
                        </div>
                        @{ var name = Model.UserName;}
                        @if (name != null)
                        {
                            <input asp-for="UserName" class="form-control" placeholder="Username" value="@name" readonly />
                        }
                        else
                        {
                            <input asp-for="UserName" class="form-control" placeholder="Username" value="" />
                        }
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div></div>
                    <label asp-for="Content" class="control-label"></label>
                    <div class="input-group">
                        <textarea rows="5" asp-for="Content" class="form-control" placeholder="Content"></textarea>
                    </div>
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <hr />
                    <input asp-for="UserId" class="form-control" value="@Model.UserId" hidden />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-primary btn-block" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>